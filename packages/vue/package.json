{
  "name": "@markdown-next/vue",
  "version": "0.0.2-alpha",
  "type": "module",
  "description": "Vue renderer for markdown-next",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "./dist",
    "./package.json",
    "./README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest --run --passWithNoTests",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "markdown",
    "vue",
    "renderer",
    "worker"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/UnboundedWeb/vue-markdown-next.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/UnboundedWeb/vue-markdown-next/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@markdown-next/parser": "workspace:*",
    "hast-util-to-jsx-runtime": "^2.3.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "vite": "^5.4.10",
    "vitest": "^4.0.16",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "vue": ">=3.2.0"
  },
  "sideEffects": false
}
