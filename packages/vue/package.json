{
  "name": "@markdown-next/vue",
  "version": "1.0.0",
  "description": "Vue components for markdown-next",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "echo \"Testing vue...\"",
    "prettier": "prettier src --write",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "vue",
    "vue3",
    "markdown",
    "markdown-renderer",
    "components",
    "worker",
    "multi-threaded"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vue-markdown-next.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/yourusername/vue-markdown-next/issues"
  },
  "dependencies": {
    "@markdown-next/parser": "workspace:*",
    "@markdown-next/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "sideEffects": false
}
